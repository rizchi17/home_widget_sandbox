<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 影 (下と右) -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10000000"
                android:endColor="#30000000"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- ハイライト (上と左) -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="315" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- メイン背景 -->
    <item android:top="1dp" android:left="1dp" android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F0F0F3"
                android:endColor="#E8E8EC"
                android:angle="135" />
            <corners android:radius="23dp" />
        </shape>
    </item>
</layer-list>